<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".page4">

    <View
        android:id="@+id/mask"
        android:layout_width="414dp"
        android:layout_height="424dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#E5E0DE"

        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="313dp"
        app:layout_constraintEnd_toStartOf="@+id/bookmark_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_icon"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/bookmark_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="137dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bookmark"
        tools:ignore="MissingConstraints" />


    <!--    star layout-->


    <View
        android:id="@+id/rectangle"
        android:layout_width="411dp"
        android:layout_height="562dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ract_page4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="396dp"
        android:layout_height="456dp"
        android:contentDescription="@string/Ingredients"
        app:layout_constraintBottom_toTopOf="@+id/Paly_now"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rectangle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>


    <TextView
        android:id="@+id/natural_ice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Natural Ice Cream"
        android:textAppearance="@style/delicious_c"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rectangle"
        app:lineHeight="19sp" />

    <LinearLayout
        android:id="@+id/start_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="129dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="14dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/natural_ice"
        app:layout_constraintTop_toTopOf="@+id/rectangle">


        <ImageView
            android:id="@+id/start_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/start_icon" />

        <ImageView
            android:id="@+id/start_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/start_icon" />

        <ImageView
            android:id="@+id/start_icon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/start_icon" />

        <ImageView
            android:id="@+id/start_icon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/start_icon" />

        <ImageView
            android:id="@+id/start_icon5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/start_icon" />


    </LinearLayout>

    <!--    text details layout-->

    <LinearLayout
        android:id="@+id/plus_minus_page4"
        android:layout_width="110dp"
        android:layout_height="28dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/natural_ice"
        app:layout_constraintStart_toStartOf="@+id/natural_ice"
        app:layout_constraintTop_toBottomOf="@+id/natural_ice"
        tools:ignore="DuplicateIds,MissingConstraints"
        tools:layout_editor_absoluteX="264dp">


        <ImageView
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_weight="1"
            app:srcCompat="@drawable/minus_page4" />

        <TextView
            android:id="@+id/min_puls_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5"
            android:textColor="#77838F"
            android:textSize="19dp" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/plus_page4" />
    </LinearLayout>


    <!--    -->

    <TextView
        android:id="@+id/price_page4"
        android:layout_width="51dp"
        android:layout_height="17dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:gravity="right|top"
        android:text="$19.90"
        android:textAppearance="@style/some_id"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toEndOf="@+id/plus_minus_page4"
        app:layout_constraintTop_toBottomOf="@id/start_all"
        tools:ignore="TextSizeCheck" />

    <!--    <LinearLayout-->
    <!--        android:id="@+id/linearLayout3"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:orientation="vertical"-->

    <!--        >-->

    <!--    </LinearLayout>-->

    <TextView
        android:id="@+id/product_detels_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginStart="14dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="14dp"
        android:gravity="top"
        android:lineSpacingExtra="7sp"
        android:text="@string/phasellus_p"
        android:textAppearance="@style/phasellus_p"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plus_minus_page4"
        tools:ignore="TextSizeCheck" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="386dp"
        android:layout_height="20dp"
        android:layout_margin="14dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout2"
        app:layout_constraintEnd_toEndOf="@+id/rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_detels_text"
        app:layout_constraintVertical_bias="0">


        <TextView
            android:id="@+id/ingredients"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:gravity="top"
            android:text="@string/Ingredients"
            android:textAppearance="@style/ingredients" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="229dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="14dp"
            android:layout_toEndOf="@id/ingredients"
            android:src="@drawable/down_arrow_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="386dp"
        android:layout_height="20dp"
        android:layout_margin="14dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_detels_text"
        app:layout_constraintVertical_bias="0.174">

        <TextView
            android:id="@+id/nutrition_d"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:gravity="top"
            android:text="@string/nutrition_d"
            android:textAppearance="@style/nutrition_d" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="229dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="14dp"
            android:layout_toEndOf="@id/nutrition_d"
            android:src="@drawable/up_arrow_icon" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/donut_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        app:srcCompat="@drawable/dont_icon" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"

        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/donut_chart"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">


        <TextView
            android:id="@+id/black"
            android:layout_width="152dp"
            android:layout_height="17dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ract_black_page4"
            android:drawablePadding="5dp"
            android:gravity="top"
            android:text="Carbohydrate (%47)"
            android:textAppearance="@style/carbohydrat" />

        <TextView
            android:id="@+id/yellow"
            android:layout_width="152dp"
            android:layout_height="17dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ract_black_page4"
            android:drawablePadding="5dp"
            android:drawableTint="#FFBD44"
            android:gravity="top"
            android:text="Protein (%24)"
            android:textAppearance="@style/carbohydrat" />

        <TextView
            android:id="@+id/blue"
            android:layout_width="152dp"
            android:layout_height="17dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ract_black_page4"
            android:drawablePadding="5dp"
            android:drawableTint="#059DD8"
            android:gravity="top"
            android:text="Fat (%12)"
            android:textAppearance="@style/carbohydrat" />

        <TextView
            android:id="@+id/green"
            android:layout_width="152dp"
            android:layout_height="17dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ract_black_page4"
            android:drawablePadding="5dp"
            android:drawableTint="#50C96D"
            android:gravity="top"
            android:text="Energy (%17)"
            android:textAppearance="@style/carbohydrat" />


    </LinearLayout>


    <Button
        android:id="@+id/Paly_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:background="@drawable/black_button"
        android:letterSpacing="0.07"
        android:text="Pay Now"
        android:textSize="14dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>